@model HrWebApp.Models.LoginModel

<form method="post" asp-action="CreateConnection" asp-controller="Profiles">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Mail" class="col-sm-2 col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Mail" type="text" class="form-control-plaintext">
        </div>
        <span class="text-danger" asp-validation-for="Mail"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
        </div>
        <div class="col-5">
            <input asp-for="Password" type="password" class="form-control" id="inputPassword">
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group row">
        <div class="col-5">
            <input type="submit" class="btn btn-primary" value="Sign In">
        </div>
    </div>
</form>