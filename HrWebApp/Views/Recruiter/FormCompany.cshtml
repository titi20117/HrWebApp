@using HrWebApp.Data;
@model HrWebApp.Models.CompanyModel

@{
    ViewData["Title"] = "Company";
}

<h1>Create your Company</h1>

<hr />

<form asp-action="CreateCompany" asp-controller="Recruiter">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-4">
        <div class="form-group">
            <label asp-for="CompanyRecruiterFirstName" class="control-label"></label>
            <input asp-for="CompanyRecruiterFirstName" class="form-control" />
            <span asp-validation-for="CompanyRecruiterFirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompanyRecruiterLastName" class="control-label"></label>
            <input asp-for="CompanyRecruiterLastName" class="form-control" />
            <span asp-validation-for="CompanyRecruiterLastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserMail" class="control-label"></label>
        <input asp-for="UserMail" class="form-control" value=@User.Identity.Name />
        <span asp-validation-for="UserMail" class="text-danger"></span>
    </div>
    <div class="row mb-4">
        <div class="form-group">
            <label asp-for="CompanyName" class="control-label"></label>
            <input asp-for="CompanyName" class="form-control" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompanySectorId" class="control-label"></label>
            <select asp-for="CompanySectorId" class="form-select" aria-label="Default select example"
                    asp-items="@(new SelectList(Model.CompanySectors, nameof(CompanySector.CompanySectorId), nameof(CompanySector.CompanySectorName)))">
                <option>Please select one</option>
            </select>
            <span asp-validation-for="CompanySectorId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompanyTypeId" class="control-label"></label>
            <select asp-for="CompanyTypeId" class="form-select" aria-label="Default select example"
                    asp-items="@(new SelectList(Model.CompanyTypes, nameof(CompanyType.CompanyTypeId), nameof(CompanyType.CompanyTypeName)))">
                <option>Please select one</option>
            </select>
            <span asp-validation-for="CompanyTypeId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <div class="form-group">
            <label asp-for="CompanyLocation" class="control-label"></label>
            <input asp-for="CompanyLocation" class="form-control" />
            <span asp-validation-for="CompanyLocation" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompanyPhone" class="control-label"></label>
            <input asp-for="CompanyPhone" class="form-control"/>
            <span asp-validation-for="CompanyPhone" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-4">
        <div class="form-group">
            <label asp-for="CompanyDateOfCreation" class="control-label"></label>
            <input asp-for="CompanyDateOfCreation" class="form-control" type="datetime"/>
            <span asp-validation-for="CompanyDateOfCreation" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompanyUrl" class="control-label"></label>
            <input asp-for="CompanyUrl" class="form-control" type="url"/>
            <span asp-validation-for="CompanyUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompanyNumberOfEmployees" class="control-label"></label>
            <input asp-for="CompanyNumberOfEmployees" class="form-control" />
            <span asp-validation-for="CompanyNumberOfEmployees" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CompanyDescription" class="control-label"></label>
        <textarea asp-for="CompanyDescription" class="form-control" rows="4"></textarea>
        <span asp-validation-for="CompanyDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary btn-lg" />
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
